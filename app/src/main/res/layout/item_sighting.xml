<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/sightingsBird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_bird"
            android:textColor="#000000"
            android:textSize="@dimen/text_big_size" />

        <TextView
            android:id="@+id/sightingsUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sightingsBird"
            android:textSize="@dimen/text_medium_size"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sightingsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sightingsUser"
            android:layout_alignBottom="@+id/sightingsUser"
            android:layout_alignParentRight="true"
            android:text="@string/item_date"
            android:textColor="#000000"
            android:textSize="@dimen/text_medium_size"/>

        <TextView
            android:id="@+id/sightingsArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sightingsBird"
            android:layout_alignBottom="@+id/sightingsBird"
            android:layout_alignParentRight="true"
            android:text="@string/sighting_area"
            android:textColor="#000000"
            android:textSize="@dimen/text_medium_size"/>
        <TextView
            android:id="@+id/sightingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="1dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>